generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int   @id @default(autoincrement())
  first_name String 
  last_name String
  password String
  email String? @unique
  role Role @default(USER) 
}

model Product {
  id Int @id @default(autoincrement())
  title String 
  description String 
  createdAt DateTime @default(now())
}

enum Role {
  USER @map(name: "user")
  ADMIN @map(name: "admin")
  AMBASSADOR @map(name: "ambassador")
}
