generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int   @id @default(autoincrement())
  first_name String 
  last_name String
  password String
  email String? @unique
  role Role @default(USER) 
  posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  title String
  body String
  userId Int
  comments Comment[]
  author User @relation(fields: [userId], references: [id])
}

model Comment { 
  id Int @id @default(autoincrement())
  body String
  postId Int
  post Post @relation(fields: [postId], references: [id])
}

enum Role {
  USER @map(name: "user")
  ADMIN @map(name: "admin")
  AMBASSADOR @map(name: "ambassador")
}
